<UserControl x:Class="MusicVault.Frontend.MainView.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicVault.Frontend.MainView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600" Loaded="OnControlLoaded">
    <Grid FocusManager.FocusedElement="{Binding ElementName=emailBox}">
        <Label Content="Dobro došli!" Margin="0,-235,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>

        <Label Content="E-mail:" Width="70" Margin="-290,-63,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        <TextBox Name="emailBox" Width="200" Height="24" Margin="0,-63,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <Label Content="Šifra:" Width="70" Margin="-290,23,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        <PasswordBox Name="passwordBox" Width="200" Height="24" Margin="0,24,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

        <Button Content="Uloguj se" HorizontalAlignment="Center" Width="200" Height="34" Margin="0,186,0,0" VerticalAlignment="Center" Click="LoginButton_Click"/>
    </Grid>
</UserControl>
